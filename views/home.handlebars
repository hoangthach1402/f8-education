
<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-course-item">
                <a href="/courses/{{this._id}}">
                <img src="{{this.image}}" alt="{{this.name}}" class="card-img-top">
                </a>
                <div class="card-body">
                    <div class="card-title">{{this.name}}</div>
                    <div class="card-text">{{this.description}}</div>
                    <a href="/courses/{{this._id}}" class="btn btn-primary">Mua khoa hoc</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>